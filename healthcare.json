{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "FAQ's about Healthcare Benefits",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "PSW is transitioning from salary-based medical allowances to a comprehensive group health insurance plan to enhance coverage and reduce costs.",
          "wrap": true
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "Health insurance benefit",
              "targetElements": ["policyOptionsDetails"],
              "maxLines":0
            }
          ]
        },
        {
          "type": "Container",
          "id": "policyOptionsDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": " The plan includes OPD coverage of Rs. 100,000 per employee per annum and IPD coverage of Rs. 500,000 to 1,000,000 per employee per annum, including immediate family and parents.",
              "wrap": true
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "What does the policy cover?",
              "targetElements": ["coverageDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "coverageDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "The policy covers outpatient (OPD) and inpatient (IPD) treatments, including consultations, diagnostics, hospitalization, and prescribed medications.",
              "wrap": true
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title":"Equity and fairness policy",
              "targetElements": ["financialImpactDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "financialImpactDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "All employees are covered under the same group health insurance plan, which includes OPD and IPD coverage for employees, their immediate family members, and parents.",
              "wrap": true
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "How do I file a claim?",
              "targetElements": ["claimProcessDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "claimProcessDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "Claims can be filed through the HR department or directly with the insurer via their online portal. Ensure all required documents are submitted for timely processing.",
              "wrap": true
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Back to Menu",
      "data": { "value": "faqMenu" }
    }
  ]
