        "@pinecone-database/pinecone": "^2.2.2",
        "@sinclair/typebox": "^0.32.35",
        "async-lock": "^1.4.1",
        "botbuilder": "^4.22.2",
        "dotenv": "^16.4.5",
        "esdoc-standard-plugin": "^1.0.0",
        "jsdoc-tsimport-plugin": "^1.0.5",
        "openai": "^4.28.4",
