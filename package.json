        "eslint": "^8.57.0",
        "jsdoc": "^4.0.3",
        "jsdoc-ts-utils": "^5.0.0",
        "nodemon": "~3.0.1",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.7",
        "ts-node": "^10.9.2",
        "typedoc": "^0.26.5",
