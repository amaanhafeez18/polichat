{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "FAQ's about Fuel Cards",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "PSW is transitioning from cash-based fuel allowances to PSO Fuel Cards to improve expense management and align with market standards.",
          "wrap": true
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "Who is eligible for Fuel Cards?",
              "targetElements": ["eligibilityDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "eligibilityDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "Employees in Grades G-1 to G-7 are eligible. Grades G-3 to G-7 receive fuel cards with existing limits, while Grades G-1 & G-2 replace conveyance allowance with a fuel limit of 80 liters per month.",
              "wrap": true
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "How do I apply for a fuel card?",
              "targetElements": ["applicationProcessDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "applicationProcessDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "To apply for a fuel card, you need to submit a formal application along with required documents to the HR department. The process typically takes 5-7 business days.",
              "wrap": true
            }
          ]
        },

        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "Fuel Limits for each Grade?",
              "targetElements": ["fuelLimitsDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "fuelLimitsDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "Fuel limits vary by grade. Grades G-1 & G-2 have a monthly limit of 80 liters per month, while other grades have existing fuel allowance limits.",
              "wrap": true
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.ToggleVisibility",
              "title": "Fuel Card lost / stolen?",
              "targetElements": ["securityDetails"]
            }
          ]
        },
        {
          "type": "Container",
          "id": "securityDetails",
          "isVisible": false,
          "items": [
            {
              "type": "TextBlock",
              "text": "If your fuel card is lost or stolen, immediately report it to the HR department to deactivate the card and issue a replacement.",
              "wrap": true
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Back to Menu",
      "data": { "value": "faqMenu" }
    }
  ]
}